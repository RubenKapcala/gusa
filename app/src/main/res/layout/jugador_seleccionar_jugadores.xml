<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ad_nombreJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintEnd_toStartOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ad_aniadirJugador_seleccionarJugador" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sexo"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ad_sexoJugador_seleccionarJugador"
        app:layout_constraintEnd_toEndOf="@+id/ad_nombreJugador_seleccionarJugador"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/ad_nombreJugador_seleccionarJugador"
        app:layout_constraintTop_toTopOf="@+id/ad_sexoJugador_seleccionarJugador"
        app:layout_constraintVertical_bias="0.512"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gustos"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ad_gustosJugador_seleccionarJugador"
        app:layout_constraintEnd_toEndOf="@+id/ad_nombreJugador_seleccionarJugador"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/ad_nombreJugador_seleccionarJugador"
        app:layout_constraintTop_toTopOf="@+id/ad_gustosJugador_seleccionarJugador"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:id="@+id/ad_sexoJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toEndOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/ad_gustosJugador_seleccionarJugador"
        app:layout_constraintWidth_percent="0.1"
        app:srcCompat="@drawable/chica" />

    <ImageView
        android:id="@+id/ad_gustosJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/ad_modificarJugador_seleccionarJugador"
        app:layout_constraintStart_toEndOf="@+id/text0"
        app:layout_constraintTop_toTopOf="@+id/ad_modificarJugador_seleccionarJugador"
        app:layout_constraintWidth_percent="0.1"
        app:srcCompat="@drawable/chica" />

    <ImageView
        android:id="@+id/ad_aniadirJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12"
        app:srcCompat="@drawable/boton_mas" />

    <ImageView
        android:id="@+id/ad_modificarJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.12"
        app:srcCompat="@drawable/boton_opciones" />
</androidx.constraintlayout.widget.ConstraintLayout>