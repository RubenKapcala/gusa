<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/fondo"
    android:padding="5dp">

    <TextView
        android:id="@+id/ad_nombreJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:text="@string/sexo"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ad_sexoJugador_seleccionarJugador"
        app:layout_constraintEnd_toStartOf="@+id/text0"
        app:layout_constraintTop_toTopOf="@+id/text0"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:text="@string/gustos"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ad_gustosJugador_seleccionarJugador"
        app:layout_constraintEnd_toStartOf="@+id/ad_modificarJugador_seleccionarJugador"
        app:layout_constraintTop_toTopOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:id="@+id/ad_sexoJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="@+id/text1"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/ad_gustosJugador_seleccionarJugador"
        app:layout_constraintWidth_percent="0.07"
        app:srcCompat="@drawable/chica" />

    <ImageView
        android:id="@+id/ad_gustosJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintEnd_toEndOf="@+id/text0"
        app:layout_constraintStart_toStartOf="@+id/text0"
        app:layout_constraintTop_toBottomOf="@+id/text0"
        app:layout_constraintWidth_percent="0.07"
        app:srcCompat="@drawable/chica" />

    <ImageView
        android:id="@+id/ad_aniadirJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12"
        app:srcCompat="@drawable/boton_mas" />

    <ImageView
        android:id="@+id/ad_modificarJugador_seleccionarJugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintTop_toTopOf="@+id/ad_aniadirJugador_seleccionarJugador"
        app:layout_constraintWidth_percent="0.12"
        app:srcCompat="@drawable/boton_opciones" />
</androidx.constraintlayout.widget.ConstraintLayout>