<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".vistas.SeleccionarJugadoresActivity"
    tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,Autofill,SpUsage">

    <Button
        android:id="@+id/btn_comenzar_seleccionarJugadores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/animacion_boton_reducido"
        android:fontFamily="@font/chewy"
        android:paddingLeft="30dp"
        android:text="@string/comenzar"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayo"
        app:layout_constraintHeight_percent="0.16"
        app:layout_constraintStart_toStartOf="@+id/constraintLayo"
        app:layout_constraintTop_toTopOf="@+id/btn_multidispositivo_seleccionarJugadores"
        app:layout_constraintWidth_percent="0.3" />

    <Button
        android:id="@+id/btn_multidispositivo_seleccionarJugadores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/animacion_boton_reducido"
        android:fontFamily="@font/chewy"
        android:paddingLeft="30dp"
        android:text="@string/modoMultidispositivo"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintHeight_percent="0.16"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bordes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintWidth_percent="0.4">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_jugadoresPreparados_seleccionarJugadores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.95"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.545"
            app:layout_constraintWidth_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bordes"
        android:minHeight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintWidth_percent="0.4">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tusJugadores_seleccionarJugadores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.95" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_jugadoresPreparados_seleccionarJugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chewy"
        android:text="@string/jugadoresPreparados"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chewy"
        android:text="@string/tusJugadores"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/constraintLayo"
        app:layout_constraintTop_toTopOf="@+id/text_jugadoresPreparados_seleccionarJugadores" />

    <ImageView
        android:id="@+id/btn_crearJugador_seleccionarJugadores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayo"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:layout_constraintWidth_percent="0.06"
        app:srcCompat="@drawable/boton_mas" />

    <ImageView
        android:id="@+id/btn_infoMultidispositivo_seleccionarJugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_multidispositivo_seleccionarJugadores"
        app:layout_constraintEnd_toStartOf="@+id/btn_multidispositivo_seleccionarJugadores"
        app:layout_constraintTop_toTopOf="@+id/btn_multidispositivo_seleccionarJugadores"
        app:srcCompat="@android:drawable/ic_menu_info_details" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_crearJugador_seleccionarJugadores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sinEscoger"
        android:clickable="true"
        android:translationZ="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tabla"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <Button
                android:id="@+id/btn_aniadir_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/animacion_boton_reducido"
                android:fontFamily="@font/chewy"
                android:paddingLeft="30dp"
                android:text="@string/confirmar"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintHeight_percent="0.16"
                app:layout_constraintStart_toStartOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintTop_toBottomOf="@+id/btn_cancelarJugador_seleccionarJugadores"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintWidth_percent="0.3" />

            <Button
                android:id="@+id/btn_cancelarJugador_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/animacion_boton_reducido"
                android:fontFamily="@font/chewy"
                android:paddingLeft="30dp"
                android:text="@string/cancelar"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaChicoGustos_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintWidth_percent="0.3" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bordes"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView17"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintWidth_percent="0.4">

                <EditText
                    android:id="@+id/et_nombre_seleccionarJugadores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="@string/nombreJugador"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chewy"
                android:text="@string/nombre"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chewy"
                android:text="@string/sexo"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chewy"
                android:text="@string/gustos"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />

            <ImageView
                android:id="@+id/btn_chicaSexo_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                app:layout_constraintTop_toTopOf="@+id/linearLayout4"
                app:layout_constraintWidth_percent="0.09"
                app:srcCompat="@drawable/chica" />

            <ImageView
                android:id="@+id/btn_borrarJugador_seleccionarJugadores"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toEndOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7"
                app:srcCompat="@drawable/elemento_nulo" />

            <LinearLayout
                android:id="@+id/lyt_tapar_chicaSexo_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/sinEscoger"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintStart_toStartOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicaSexo_seleccionarJugadores" />

            <ImageView
                android:id="@+id/btn_chicoSexo_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                app:layout_constraintTop_toTopOf="@+id/btn_chicaSexo_seleccionarJugadores"
                app:layout_constraintWidth_percent="0.09"
                app:srcCompat="@drawable/chico" />

            <LinearLayout
                android:id="@+id/lyt_tapar_chicoSexo_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/sinEscoger"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintStart_toStartOf="@+id/btn_chicoSexo_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicoSexo_seleccionarJugadores" />


            <ImageView
                android:id="@+id/btn_chicaGustos_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_chicoGustos_seleccionarJugadores"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintWidth_percent="0.09"
                app:srcCompat="@drawable/chica" />

            <LinearLayout
                android:id="@+id/lyt_tapar_chicaGustos_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/sinEscoger"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintStart_toStartOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicaGustos_seleccionarJugadores" />


            <ImageView
                android:id="@+id/btn_chicoGustos_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintEnd_toStartOf="@+id/btn_chicaChicoGustos_seleccionarJugadores"
                app:layout_constraintStart_toEndOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.09"
                app:srcCompat="@drawable/chico" />

            <LinearLayout
                android:id="@+id/lyt_tapar_chicoGustos_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/sinEscoger"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicoGustos_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicoGustos_seleccionarJugadores"
                app:layout_constraintStart_toStartOf="@+id/btn_chicoGustos_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicoGustos_seleccionarJugadores" />

            <ImageView
                android:id="@+id/btn_chicaChicoGustos_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                app:layout_constraintStart_toEndOf="@+id/btn_chicoGustos_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicaGustos_seleccionarJugadores"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.09"
                app:srcCompat="@drawable/chico_chica" />

            <LinearLayout
                android:id="@+id/lyt_tapar_chicaChicoGustos_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/sinEscoger"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/btn_chicaChicoGustos_seleccionarJugadores"
                app:layout_constraintEnd_toEndOf="@+id/btn_chicaChicoGustos_seleccionarJugadores"
                app:layout_constraintStart_toStartOf="@+id/btn_chicaChicoGustos_seleccionarJugadores"
                app:layout_constraintTop_toTopOf="@+id/btn_chicaChicoGustos_seleccionarJugadores" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_info_seleccionarJugadores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sinEscoger"
        android:clickable="true"
        android:translationZ="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/tabla"
            android:elevation="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <TextView
                android:id="@+id/text_info_seleccionarJugadores"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/chewy"
                android:gravity="center"
                android:text="@string/descripcionMultidispositivo"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>